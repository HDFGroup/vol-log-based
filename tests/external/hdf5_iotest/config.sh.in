#!/bin/bash

export HDF5_ROOT=@HDF5_ROOT_PATH@
export LD_LIBRARY_PATH="${HDF5_ROOT}/lib:${LD_LIBRARY_PATH}"

cd hdf5-iotest
./autogen.sh
cd ..

rm -rf build
mkdir build
cd build
../hdf5-iotest/configure --silent \
                         CC=${HDF5_ROOT}/bin/h5pcc \
                         CFLAGS="@CFLAGS@" 

